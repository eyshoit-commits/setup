# Base environment variables
# This file is sourced first and sets up fundamental paths

# Determine SETUP_ROOT dynamically
if [ -n "$BASH_SOURCE" ]; then
    export SETUP_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
elif [ -n "$ZSH_VERSION" ]; then
    export SETUP_ROOT="$(cd "$(dirname "${(%):-%x}")/.." && pwd)"
else
    # Fallback for other shells
    export SETUP_ROOT="${SETUP_ROOT:-$(pwd)}"
fi

export CONFIG_DIR="$SETUP_ROOT/config"
export SCRIPTS_DIR="$SETUP_ROOT/scripts"
