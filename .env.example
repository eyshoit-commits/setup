# ==============================================
# Example Environment Configuration
# ==============================================
# Copy this file to .env and customize for your needs
# Then source it before running setup: source .env

# ============================================
# Setup Mode
# ============================================
# dev    - Flexible versioning, warnings only
# repro  - Strict versioning, fails on drift
SETUP_MODE=dev

# ============================================
# Core Language Toolchains
# ============================================
FEATURE_NODE=true
FEATURE_PYTHON=true
FEATURE_RUST=true

# ============================================
# Application Domains
# ============================================
FEATURE_FRONTEND=true
FEATURE_BACKEND=true
FEATURE_AI=false
FEATURE_MOBILE=false
FEATURE_DESKTOP=false

# ============================================
# Development Tools
# ============================================
FEATURE_DOCKER=false
FEATURE_K8S=false

# ============================================
# Setup Behavior
# ============================================
# Allow installation of latest versions even if specific version unavailable
ALLOW_LATEST=true

# Prefer offline artifacts over network downloads
PREFER_OFFLINE=false

# Strict version matching
STRICT_VERSIONS=false

# Bypass pre-commit installation (NOT RECOMMENDED)
FORCE_UNSAFE=false

# ============================================
# Common Profiles (Uncomment one)
# ============================================

# Frontend Developer
# FEATURE_NODE=true
# FEATURE_FRONTEND=true
# FEATURE_PYTHON=false
# FEATURE_RUST=false
# FEATURE_BACKEND=false

# Backend Developer
# FEATURE_PYTHON=true
# FEATURE_RUST=true
# FEATURE_BACKEND=true
# FEATURE_NODE=false
# FEATURE_FRONTEND=false

# Full-Stack Developer
# FEATURE_NODE=true
# FEATURE_PYTHON=true
# FEATURE_RUST=true
# FEATURE_FRONTEND=true
# FEATURE_BACKEND=true

# AI/ML Developer
# FEATURE_PYTHON=true
# FEATURE_AI=true
# FEATURE_NODE=false
# FEATURE_RUST=false
# FEATURE_FRONTEND=false
# FEATURE_BACKEND=true

# DevOps Engineer
# FEATURE_DOCKER=true
# FEATURE_K8S=true
# FEATURE_PYTHON=true
# FEATURE_NODE=false
# FEATURE_RUST=false

# Minimal (CI/CD)
# FEATURE_NODE=false
# FEATURE_PYTHON=false
# FEATURE_RUST=false
# SETUP_MODE=repro
# STRICT_VERSIONS=true
# Example environment variables
# Copy this to .env and customize

# Allow latest versions instead of locked versions
# SETUP_ALLOW_LATEST=true

# Custom paths (optional)
# SETUP_ROOT=/path/to/setup
# CONFIG_DIR=/path/to/config

# MCP/Agent configuration
# MCP_ENABLED=true
