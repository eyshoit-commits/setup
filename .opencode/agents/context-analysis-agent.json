{
  "name": "context-analysis-agent",
  "version": "1.0.0",
  "description": "Context analysis plugin from @IgorWarzocha/Opencode-Context-Analysis-Plugin",
  "repository": "https://github.com/IgorWarzocha/Opencode-Context-Analysis-Plugin",
  "enabled": true,
  "config": {
    "deepAnalysis": true,
    "semanticUnderstanding": true,
    "dependencyTracking": true,
    "impactAnalysis": true,
    "codeRelationships": true,
    "analysisDepth": "comprehensive"
  },
  "analysis": {
    "fileTypes": ["*"],
    "excludePatterns": ["node_modules", "dist", "build", ".git"],
    "cacheResults": true,
    "incrementalAnalysis": true
  },
  "output": {
    "format": "structured",
    "verbosity": "detailed",
    "includeMetrics": true
  },
  "permissions": {
    "fileSystem": true,
    "network": false,
    "execution": false
  }
}
